<UserControl x:Class="ResxSync.UI.Controls.SyncKeyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ResxSync.UI.Controls"
             mc:Ignorable="d" Height="50" Width="185">
    <Grid Background="Aqua">
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="KeyTB" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="5">
            </TextBox>
            <TextBox x:Name="OwnersTB" IsReadOnly="True" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="5">
                3
            </TextBox>
        </StackPanel>
        <Button Width="20" Height="20" HorizontalAlignment="Right" Content="X"/>
    </Grid>
</UserControl>
