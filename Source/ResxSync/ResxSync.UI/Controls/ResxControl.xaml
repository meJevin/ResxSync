<UserControl x:Class="ResxSync.UI.Controls.ResxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ResxSync.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="560.625" d:DesignWidth="428.75"
             Background="White">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="0"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition MinWidth="0"/>
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="KeysSP" Grid.Column="0"/>

            <GridSplitter Grid.Column="1"
                      VerticalAlignment="Stretch" HorizontalAlignment="Center"
                      Width="5"
                      Background="Red"/>

            <StackPanel x:Name="ValuesSP" Grid.Column="2"/>
        </Grid>
    </ScrollViewer>
</UserControl>
