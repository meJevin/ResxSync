<Window x:Class="ResxSync.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResxSync.UI"
        xmlns:controls="clr-namespace:ResxSync.UI.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="657" Width="990.5">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Add" Click="AddFileMI_Click"/>
            </MenuItem>
            <MenuItem Header="Edit"/>
            <MenuItem Header="View"/>
        </Menu>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid>
                <ListView x:Name="WorkspacesLV"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">

                </ListView>
            </Grid>

            <Grid Grid.Column="1">
                <controls:WorkspaceControl x:Name="CurrentWorkspace"/>
            </Grid>

            <GridSplitter Grid.Column ="0" Background="Transparent" Width="5"
                HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
        </Grid>
    </DockPanel>
</Window>
