<Window x:Class="ResxSync.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResxSync.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <StackPanel VerticalAlignment="Center">
            <Button Width="100" Height="24"
                Click="AddFileButtonClick">
                Add file
            </Button>
            <Button Width="100" Height="24"
                Click="GetUnsyncedButtonClick">
                Get Unsynced
            </Button>
        </StackPanel>

        <ScrollViewer Grid.Column="1">
            <ListBox x:Name="AllKeys">

            </ListBox>
        </ScrollViewer>
        
        <ScrollViewer Grid.Column="2">
            <ListBox x:Name="UnsyncedKeys">

            </ListBox>
        </ScrollViewer>
    </Grid>
</Window>
